<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
    <header class="sticky-top pb-3">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom border-primary box-shadow mb-3">
            <div class="container-fluid px-5">
                <a class="navbar-brand fw-bold fs-3" asp-area="" asp-controller="Home"  asp-action="Index">ExT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse  d-sm-inline-flex justify-content-between">
                    <ul style="gap: 15px;" class="navbar-nav  flex-grow-1 d-flex justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" id="home" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="expense" asp-area="" asp-controller="Expense" asp-action="Index">Expense</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
       
        <main  role="main" class="pb-3 container-fluid">
            @RenderBody()
        </main>

    <footer class="border-top border-primary p-2  footer text-muted">
        <div class="container">
            &copy; 2023 - ExpenseTracker - <a asp-area="" asp-controller="Expense" asp-action="Index">Expenses</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
