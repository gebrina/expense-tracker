@{
    ViewData["Title"] = "Home Page";
}

    <section class="d-flex h-100 hero  p-5 justify-content-between align-items-end">
         <div>
            <h1 class="text-light">Expense <br/> Tracker</h1>
            <p class="text-light">Track and manage your expenses.</p>
            <a asp-controller="Expense" class="btn py-2 px-4 fs-3 btn-danger" asp-action="AddExpense">Start Tracking</a>
         </div>
